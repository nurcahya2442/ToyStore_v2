<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GirlToyActivity">

    <RelativeLayout
        android:id="@+id/relativeBodyParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/RelativeSideLeft"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="match_parent"
            android:background="#fef4f3">


            <ImageView
                android:id="@+id/iv_list"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/last_logo_rubik"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_centerHorizontal="true"/>


            <ImageView
                android:id="@+id/bg_shape_home"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/bg_shape_home"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_20sdp"/>
            
            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_home" 
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_10sdp"/>




        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeSideRight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/RelativeSideLeft"
            android:background="#fff">

            <ImageView
                android:id="@+id/ic_search"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_search"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_20sdp"/>
            
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvItemToys"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ic_search"
                android:layout_marginTop="@dimen/_60sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"/>



        </RelativeLayout>

        <TextView
            android:id="@+id/tv_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Children"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:fontFamily="@font/nunito_bold"
            android:textSize="@dimen/_25ssp"
            android:textColor="#fe929f"/>

        <TextView
            android:id="@+id/tv_judul2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toys"
            android:textColor="#2E2D2D"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_below="@id/tv_judul"
            android:fontFamily="@font/nunito_light"
            android:textSize="@dimen/_15ssp"/>

        <TextView
            android:id="@+id/tvGirlMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Girl Toys "
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_below="@id/tv_judul2"
            android:rotation="-90"
            android:layout_marginTop="@dimen/_90sdp"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#fe929f"/>

        <TextView
            android:id="@+id/tvBoyMenu_g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Boy Toys "
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_below="@id/tvGirlMenu"
            android:rotation="-90"
            android:layout_marginTop="@dimen/_70sdp"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="#2E2D2D"/>

        <TextView
            android:id="@+id/tvBabyMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baby Toys "
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_below="@id/tvBoyMenu_g"
            android:rotation="-90"
            android:layout_marginTop="@dimen/_75sdp"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/nunito_semibold"
            android:textColor="#2E2D2D"/>


    </RelativeLayout>





</RelativeLayout>