<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Intro.onBoarding1"
    android:background="#fff">

        <ImageView
            android:id="@+id/ivOnboard1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/onboard_3" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/imgGif_heart"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        app:lottie_rawRes="@raw/mangel"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:scaleType="centerInside"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_350sdp"
        android:layout_marginLeft="@dimen/_20sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buat Si Buah Hati Senang Dengan Toys Shop"
        android:fontFamily="@font/nunito_extrabold"
        android:textColor="#fff"
        android:textSize="@dimen/_25ssp"
        android:layout_marginTop="@dimen/_430sdp"
        android:gravity="center"/>


</RelativeLayout>